<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.xd.phonedefender.hw.view.SettingItemView
        android:id="@+id/siv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hw:desc_off="自动更新已关闭"
        hw:desc_on="自动更新已开启"
        hw:mtitle="自动更新设置"></com.xd.phonedefender.hw.view.SettingItemView>

    <com.xd.phonedefender.hw.view.SettingItemView
        android:id="@+id/siv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hw:desc_off="归属地显示已经关闭"
        hw:desc_on="归属地显示已经开启"
        hw:mtitle="电话归属地显示设置"></com.xd.phonedefender.hw.view.SettingItemView>

    <com.xd.phonedefender.hw.view.SettingClickView
        android:id="@+id/siv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hw:mtitle="归属地提示框风格">

    </com.xd.phonedefender.hw.view.SettingClickView>

    <com.xd.phonedefender.hw.view.SettingClickView
        android:id="@+id/siv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hw:mtitle="归属地提示框显示位置">
    </com.xd.phonedefender.hw.view.SettingClickView>

    <com.xd.phonedefender.hw.view.SettingItemView
    android:id="@+id/siv5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    hw:desc_off="黑名单拦截已经关闭"
    hw:desc_on="黑名单拦截已经开启"
    hw:mtitle="黑名单拦截设置"></com.xd.phonedefender.hw.view.SettingItemView>

    <com.xd.phonedefender.hw.view.SettingItemView
        android:id="@+id/siv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hw:desc_off="看门狗已经关闭"
        hw:desc_on="看门狗已经开启"
        hw:mtitle="看门狗设置"></com.xd.phonedefender.hw.view.SettingItemView>

</LinearLayout>